# abstract it all into a single func

def get_host(ages,A=2.11e-13, beta=-1.13, t0=40):
    p = ((ages*1000 < t0)*0) + ((ages*1000>t0)*A * (ages**beta))
    return np.random.choice(np.arange(len(ages)),p=p/np.sum(p))


