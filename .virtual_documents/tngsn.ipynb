def dtd_pl(age, A=2.11e-13, beta=-1.13, t0=40):
        """Default delay time distribution function."""
        p = ((age*1000 < t0)*0) + ((age*1000>t0)*A * (age**beta))
        #if age*1000 < t0:
        #    return 0
        return p

